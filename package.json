{
  "name": "@harcokuppens/boolean-expression",
  "type": "module",
  "version": "1.0.0",
  "description": "match a string using a boolean expression of words",
  "keywords": [
    "boolean",
    "expression",
    "match",
    "words"
  ],
  "author": "Harco Kuppens",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harcokuppens/highlight-words"
  },
  "main": "src/BooleanExpression.ts",
  "types": "types/BooleanExpression.d.ts",
  "files": [
    "dist",
    "types",
    "src",
    "tests"
  ],
  "scripts": {
    "generate": "./generate.bash",
    "build": "npm run generate && tsc",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf src/generated/ dist/ types/ ",
    "cleanall": "npm run clean && rm -rf  node_modules/",
    "test": "npx vitest --no-watch",
    "testscript": "npm run generate &&  node --loader ts-node/esm  tests/test.ts # no build needed!"
  },
  "dependencies": {
    "antlr4": "^4.13.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@vitest/ui": "^3.0.8",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}